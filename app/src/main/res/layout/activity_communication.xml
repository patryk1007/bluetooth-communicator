<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


    <Button
        android:id="@+id/communication_send_message_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/communication_view_send_message" />

    <EditText
        android:id="@+id/communication_message_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/communication_send_message_button"
        android:hint="@string/communication_view_message_hint"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/communication_log_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/communication_message_input" />

</RelativeLayout>